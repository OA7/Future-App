<div class="sign-up-form">
  <h1>Edit Account</h1>
  <%= form_for @user do |f| %>
    <%= render 'shared/errors', object: @user %>
    <%= f.label :username %>
    <%= f.text_field :username, placeholder: 'Enter your username..', autofocus: true, class:'input-box' %>

    <%= f.label :image %>
    <%= f.file_field :image, class:'input-box' %>
    <%= f.hidden_field :image_cache %>

    <%= f.submit 'Update', class: 'sign-up-btn' %>
    
  <% end %>
</div>
